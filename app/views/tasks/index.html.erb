<h1>Tasks!</h1>

<ul>
  <h2>Incomplete Tasks</h2>
    <% @tasks_not_done.each do |task| %>
      <li><a href="/tasks/<%= task.id %>"><%= task.name %></a>
      <form action="/tasks/<%= task.id %>" method="post">
        <input id="task-name" name="name" type="hidden" value="<%= task.name %>">
        <input name="_method" type="hidden" value="patch">
        <input name="done" type="hidden" value="true">
        <button>Done</button></li>
      </form>
    <% end %>
</ul>

<ul>
  <h2>Completed Tasks</h2>
  <% @tasks_done.each do |task| %>
    <li><a href="/tasks/<%= task.id %>"><%= task.name %></a>
  <% end %>
</ul>

